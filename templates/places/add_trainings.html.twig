{% extends 'base.html.twig' %}

{% block title %}Formation : {{place.name}} - Ajouter une formation{% endblock %}

{% block body %}
    <div class="page-header d-print-none">
        <div class="container-xl">
            <div class="row g-2 align-items-center">
                <div class="col">
                    <div class="page-pretitle">
                        {{ place.name}}
                    </div>
                    <h2 class="page-title">
                        Ajout de formation
                    </h2>
                </div>
            </div>
        </div>
    </div>
    <div class="page-body">
        <div class="container-xl">
            <div class="row row-cards">
                <div class="col-12">
                    {{ form_errors(trainingForm) }}

                    {{ form_start(trainingForm, { 'attr' : { 'class': 'card' } } ) }}
                        <div class="card-body">
                            <div class="row row-cards">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        {{ form_label(trainingForm.title, 'Intitulé', {'label_attr': {'class': 'form-label required'}}) }}
                                       
                                            {{ form_widget(trainingForm.title, {'attr': {'class': 'form-control', 'required': true}}) }}
                                       
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        {{ form_label(trainingForm.shortTitle, 'Abbréviation', {'label_attr': {'class': 'form-label'}}) }}
                                       
                                            {{ form_widget(trainingForm.shortTitle, {'attr': {'class': 'form-control', 'required': false}}) }}
                                       
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        {{ form_label(trainingForm.cursus, 'Cursus', {'label_attr': {'class': 'form-label'}}) }}
                                       
                                            {{ form_widget(trainingForm.cursus, {'attr': {'class': ''}}) }}
                                        
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        {{ form_label(trainingForm.trainingsModality, 'Modalité', {'label_attr': {'class': 'form-label required'}}) }}
                                       
                                            {{ form_widget(trainingForm.trainingsModality, {'attr': {'class': '', 'required':true}}) }}
                                        
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="mb-3">
                                        {{ form_label(trainingForm.startTrainingDate, 'Date de début de formation', {'label_attr': {'class': 'form-label'}, 'required': true}) }}
                                        <div class="input-icon mb-2">
                                            {{ form_widget(trainingForm.startTrainingDate, {'attr': {'class': 'form-control startTrainingDate-flatpickr'}}) }}
                                            <span class="input-icon-addon"><!-- Download SVG icon from http://tabler-icons.io/i/calendar -->
                                                <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" fill="none"></path><path d="M4 7a2 2 0 0 1 2 -2h12a2 2 0 0 1 2 2v12a2 2 0 0 1 -2 2h-12a2 2 0 0 1 -2 -2v-12z"></path><path d="M16 3v4"></path><path d="M8 3v4"></path><path d="M4 11h16"></path><path d="M11 15h1"></path><path d="M12 15v3"></path></svg>
                                            </span>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="mb-3">
                                        {{ form_label(trainingForm.endTrainingDate, 'Date de fin de formation', {'label_attr': {'class': 'form-label'}, 'required': true}) }}
                                        <div class="input-icon mb-2">
                                            {{ form_widget(trainingForm.endTrainingDate, {'attr': {'class': 'form-control endTrainingDate-flatpickr'}}) }}
                                            <span class="input-icon-addon"><!-- Download SVG icon from http://tabler-icons.io/i/calendar -->
                                                <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" fill="none"></path><path d="M4 7a2 2 0 0 1 2 -2h12a2 2 0 0 1 2 2v12a2 2 0 0 1 -2 2h-12a2 2 0 0 1 -2 -2v-12z"></path><path d="M16 3v4"></path><path d="M8 3v4"></path><path d="M4 11h16"></path><path d="M11 15h1"></path><path d="M12 15v3"></path></svg>
                                            </span>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="mb-3">
                                        {{ form_label(trainingForm.defaultClassRoom, 'Salle par défaut', {'label_attr': {'class': 'form-label'}}) }}
                                       
                                            {{ form_widget(trainingForm.defaultClassRoom, {'attr': {'class': ''}}) }}
                                        
                                    </div>
                                </div>
                                <div class="col-md-2">
                                </div>
                                <div class="col-md-4">
                                    <div class="mb-3">
                                        {{ form_label(trainingForm.contentContact, 'Responsable Pédagogique', {'label_attr': {'class': 'form-label'}}) }}
                                       
                                            {{ form_widget(trainingForm.contentContact, {'attr': {'class': ''}}) }}
                                        
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="mb-3">
                                        {{ form_label(trainingForm.scholarshipContact, 'Responsable Vie Scolaire', {'label_attr': {'class': 'form-label'}}) }}
                                       
                                            {{ form_widget(trainingForm.scholarshipContact, {'attr': {'class': ''}}) }}
                                        
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="mb-3">
                                        {{ form_label(trainingForm.administrativeContact, 'Responsable Admnistratif', {'label_attr': {'class': 'form-label'}}) }}
                                       
                                            {{ form_widget(trainingForm.administrativeContact, {'attr': {'class': ''}}) }}
                                        
                                    </div>
                                </div>
                            </div>                               
                        </div>
                        <div class="card-footer text-end">
                            <button type="submit" class="btn btn-primary ms-auto">Enregistrer</button>
                        </div>
                        
                    {{ form_end(trainingForm) }}
                </div>
            </div>
        </div>
        
    </div>
{% endblock %}

{% block stylesheets %}
    {{ encore_entry_link_tags('flatpickr') }}
{% endblock %}
{% block javascripts_bottom %}
    {{ encore_entry_script_tags('flatpickr') }}
{% endblock %}