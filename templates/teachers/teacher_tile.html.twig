<div class="col-md-6 col-lg-3">
    <div class="card">
        <div class="card-body p-4 text-center">
            <span class="avatar avatar-xl mb-3 rounded" style="background-image: url({{asset(teacher.avatarUrl)}})"></span>
            <h3 class="m-0 mb-1">{{teacher.displayName}}</h3>
            <div class="text-secondary">{{teacher.email}}</div>
            <div class="mt-3">
                {% if is_granted('ROLE_TEACHER')%}
                    <span class="badge bg-cyan-lt">Enseignant</span>
                {% endif %}
                {% if is_granted('ROLE_ADMIN')%}
                    <span class="badge bg-lime-lt">Administrateur</span>
                {% endif %}
            </div>
        </div>
        <div class="d-flex d-none">
