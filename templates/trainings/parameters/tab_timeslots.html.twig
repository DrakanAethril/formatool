<div class="table-responsive">
    <table class="table card-table table-vcenter text-nowrap datatable" id="timeslots-table" style="width:100%">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Date de d√©but</th>
                <th>Date de fin</th>
                <th>Type</th>
                <th class="w-1"></th>   
            </tr>
        </thead>
        <tbody>
            {% for timeslot in training.timeslots %}
                <tr>
                    <td>
                        {{timeslot.name}}
                    </td>
                    <td>
                        {{timeslot.startDate|format_datetime('short', 'short', locale='fr')}}
                    </td>
                    <td class="">
                        {{timeslot.endDate|format_datetime('short', 'short', locale='fr')}}
                    </td>
                    <td class="">
                        {{timeslot.timeSlotsTypes.name}}
                    </td>
                    <td class="text-end">
                        <div class="btn-list flex-nowrap justify-content-end">
                            {% if (is_granted('TRAINING_PARAMETERS_TIMESLOT|WRITE', training)) %}
                                <a href="{{path('training_add_timeslot', {'training':training.id, 'tt':timeslot.id})}}" class="btn btn-ghost-warning">
                                    Modifier
                                </a>
                            {% endif %}
                            {% if (is_granted('TRAINING_PARAMETERS_TIMESLOT|DELETE', training)) %}
                                <a href="{{path('training_remove_timeslot', {'training':training.id, 'id':timeslot.id})}}" class="btn btn-ghost-danger">
                                    Supprimer
                                </a>
                            {% endif %}
                        </div>
                    </td>
                </tr>
            {%endfor%}
        </tbody>
    </table>
</div>