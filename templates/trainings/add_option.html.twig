{% extends 'base.html.twig' %}

{% block title %}Formation : {{training.title}} - Ajouter une option{% endblock %}

{% block body %}
    <div class="page-header d-print-none">
        <div class="container-xl">
            <div class="row g-2 align-items-center">
                <div class="col">
                    <div class="page-pretitle">
                        {{ training.title}}
                    </div>
                    <h2 class="page-title">
                        Ajout d'option
                    </h2>
                </div>
            </div>
        </div>
    </div>
    <div class="page-body">
        <div class="container-xl">
            <div class="row row-cards">
                <div class="col-12">
                    {{ form_errors(optionsForm) }}

                    {{ form_start(optionsForm, { 'attr' : { 'class': 'card' } } ) }}
                        <div class="card-body">
                            <div class="row row-cards">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        {{ form_label(optionsForm.name, 'Nom de l\'option', {'label_attr': {'class': 'form-label required'}}) }}
                                       
                                            {{ form_widget(optionsForm.name, {'attr': {'class': 'form-control', 'required': true}}) }}
                                       
                                    </div>
                                </div>
                                 <div class="col-md-4">
                                    <div class="mb-3">
                                        {{ form_label(optionsForm.shortname, 'Abbr√©viation de l\'option', {'label_attr': {'class': 'form-label required'}}) }}
                                       
                                            {{ form_widget(optionsForm.shortname, {'attr': {'class': 'form-control', 'required': true}}) }}
                                       
                                    </div>
                                </div>
                            </div>                               
                        </div>
                        <div class="card-footer text-end">
                            <button type="submit" class="btn btn-primary ms-auto">Enregistrer</button>
                        </div>
                        
                    {{ form_end(optionsForm) }}
                </div>
            </div>
        </div>
        
    </div>
{% endblock %}