{% extends 'base.html.twig' %}

{% block title %}Formation : {{training.title}}{% endblock %}

{% block stylesheets %}
    {{ encore_entry_link_tags('datatable') }}
{% endblock %}

{% block body %}
    <div class="page-header d-print-none">
        <div class="container-xl">
            <div class="row g-2 align-items-center">
                <div class="col">
                    <div class="page-pretitle">
                        {{training.title}}
                    </div>
                    <h2 class="page-title">
                        Paramétrage
                    </h2>
                </div>
            </div>
        </div>
    </div>
    <div class="page-body">
        <div class="container-xl">
            <div class="row row-deck row-cards">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            {% include('trainings/parameters/tabs_menu.html.twig') %}
                        </div>
                        <div class="card-body">
                            <div class="tab-content">
                                <div class="tab-pane active show">
                                    <div class="table-responsive">
                                        <table class="table card-table table-vcenter text-nowrap datatable" id="timeslots-table" style="width:100%">
                                            <thead>
                                                <tr>
                                                    <th>Nom</th>
                                                    <th>Date de début</th>
                                                    <th>Date de fin</th>
                                                    <th>Type</th>
                                                    <th class="w-1"></th>   
                                                </tr>
                                            </thead>
                                            <tbody>
                                                {% for timeslot in training.timeslots %}
                                                    <tr>
                                                        <td>
                                                            {{timeslot.name}}
                                                        </td>
                                                        <td>
                                                            {{timeslot.startDate|format_datetime('short', 'short', locale='fr')}}
                                                        </td>
                                                        <td class="">
                                                            {{timeslot.endDate|format_datetime('short', 'short', locale='fr')}}
                                                        </td>
                                                        <td class="">
                                                            {{timeslot.timeSlotsTypes.name}}
                                                        </td>
                                                        <td class="text-end">
                                                            <div class="btn-list flex-nowrap justify-content-end">
                                                                <a href="{{path('training_add_timeslot', {'id':training.id, 'tt':timeslot.id})}}" class="btn btn-ghost-warning">
                                                                    Modifier
                                                                </a>
                                                                <a href="{{path('training_remove_timeslot', {'id':timeslot.id})}}" class="btn btn-ghost-danger">
                                                                    Supprimer
                                                                </a>
                                                            </div>
                                                        </td>
                                                    </tr>
                                                {%endfor%}
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}

{% block javascripts_bottom %}
     {{ encore_entry_script_tags('datatable') }}
{% endblock %}
