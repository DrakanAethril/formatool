<div class="col-12 d-print-none">
    {{ form_errors(reportForm) }}
    {{ form_start(reportForm, { 'attr' : { 'class': 'card' } } ) }}
        <div class="card-body">
            <div class="row row-cards">
                    <div class="col-md-6 mb-3">
                        {{ form_label(reportForm.title, 'Titre', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(reportForm.title, {'attr': {'class': 'form-control', 'required': true}}) }}
                    </div>
                    <div class="col-md-3 mb-3">
                        {{ form_label(reportForm.referee, 'Référent établissement', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(reportForm.referee, {'attr': {'class': '', 'required': true}}) }}
                    </div>
                    <div class="col-md-3 mb-3">
                        {{ form_label(reportForm.day, 'Date', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(reportForm.day, {'attr': {'class': 'form-control exportReportDay-flatpickr', 'required': true}}) }}
                    </div>
                    {% if training.trainingsOptions is not empty %}
                        <div class="col-md-3">
                            <div class="mb-3">
                                {{ form_label(reportForm.trainingOptions, 'Options concernées', {'label_attr': {'class': 'form-label', 'required': false}}) }}
                                
                                    {{ form_widget(reportForm.trainingOptions, {
                                            'attr' : {'class' : ''}
                                        }) }}
                                
                            </div>
                        </div>
                    {% endif %}
                    <div class="col-md-12"> 
                            <div class="">
                                {{ form_label(reportForm.description, 'Description', {'label_attr': {'class': 'form-label', 'required': true}}) }}
                                <div>
                                    {{ form_widget(reportForm.description, {
                                            'attr' : {'class' : '', 'rows' : 8}
                                        }) }}
                                </div>
                            </div>
                    </div>
                    <div class="card-footer text-end">
                            <button type="submit" class="btn btn-primary ms-auto">Enregistrer</button>
                    </div>
                </div>
        </div>
    {{ form_end(reportForm) }}
</div>
{% if reportData is not empty %}
    {% include('trainings_exports/tabs/widgets/report_pdf.html.twig') with {'training': training, 'reportData': reportData, 'students': students} %}
{% endif %}